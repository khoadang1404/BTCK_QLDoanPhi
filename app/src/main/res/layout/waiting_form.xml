<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".waiting_form"
    android:background="@drawable/background_waiting_form"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ ĐOÀN PHÍ,"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="35dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HỘI PHÍ"
        android:layout_gravity="center"
        android:textSize="35dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nhóm 7:"
        android:layout_gravity="center"
        android:textSize="23dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#d63031"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Đăng Khoa"
        android:layout_gravity="center"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu Văn Đức"
        android:layout_gravity="center"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>

</LinearLayout>